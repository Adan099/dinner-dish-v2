<section class="order-form my-4 mx-4">
  <div class="container pt-4">
    <div class="row">
      <div class="col-12">
        <h1>You can see my Order Form</h1>
        <span>with some explanation below</span>
        <hr class="mt-1">
      </div>
      <div class="col-12">
        <%= form_with(model: @orderdetails, url: order_path, remote: true) do |f| %>
          <div class="row mx-4">
            <div class="col-12 mb-2">
              <label class="order-form-label">Contact Details</label>
            </div>
            <div class="col-12 col-sm-6">
              <%= f.text_field :address, class:"order-form-input", placeholder: "Address", require: true  %>
            </div>
            <div class="col-12 col-sm-6 mt-2 mt-sm-0">
              <%# <input class="order-form-input" placeholder="Last"> %>
              <%= f.text_field :phone, class:"order-form-input", placeholder: "Phone", require: true  %>
              <%= f.hidden_field :user_id, value: current_user.id  %>
              <%= f.hidden_field :restaurant_id, value: restaurant_ids  %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <%= f.submit "Submit", class:"btn btn-dark d-block mx-auto btn-submit" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="order-form my-4 mx-4">
  <div class="container pt-4">
    <div class="row">
      <div class="col-12">
        <h1>Order Details</h1>
        <span>with some explanation below</span>
        <hr class="mt-1">
      </div>
      <div class="col-12">
        <%= form_with(model: @order, url: orders_path, local: true) do |f| %>
          <% if @order.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li class="text-danger"><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row mx-4">
            <div class="col-12 mb-2">
              <label class="order-form-label">Contact Details</label>
            </div>
            <div class="col-12 col-sm-6">
              <%= f.text_field :address, class:"order-form-input", placeholder: "Address", require: true  %>
            </div>
            <div class="col-12 col-sm-6 mt-2 mt-sm-0">
              <%# <input class="order-form-input" placeholder="Last"> %>
              <%= f.text_field :phone, class:"order-form-input", placeholder: "Phone", require: true  %>
              <%= f.hidden_field :user_id, value: current_user.id  %>
              <%= f.hidden_field :total, value: 0  %>
              <%= f.hidden_field :restaurant_id, value: restaurant_ids  %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-12">
              <%= f.submit "Submit", class:"btn btn-dark d-block mx-auto btn-submit" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

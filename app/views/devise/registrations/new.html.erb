
<div class="container register-form mt-5 pt-5">
  <div class="form">
    <div class="note">
      <p>Sign up</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'signup-form'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-content">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.text_field :full_name, placeholder: "Full Name *", required: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.text_field :display_name, placeholder: "Display Name", class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.email_field :email, autocomplete: "email", placeholder: "Email *", required: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password *", required: true, class: 'form-control' %>
              <% if @minimum_password_length %>
                <em class="small text-center">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password *", required: true, class: 'form-control' %>
            </div>

          </div>
        </div>
        <%= f.submit "Sign up", class:"btnSubmit" %>
      </div>
    <% end %>
  </div>
</div>

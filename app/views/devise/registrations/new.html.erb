<div class="holder">
  <div class="parent">
    <h3>Sign Up</h3>
    <%= # render 'layouts/notification' %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'signup-form'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name *", required: true %>
        <span class="border"></span>
      <div>
        <%= f.text_field :full_name, autofocus: true, placeholder: "Display Name" %>
        <span class="border"></span>
      </div>
      <div>
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email *", required: true %>
        <span class="border"></span>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password *", required: true %>
        <span class="border"></span>
      </div>
      <% if @minimum_password_length %>
          <em class="small text-center">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password *", required: true %>
        <span class="border"></span>
      </div>
      <%# <input type="submit" value="LOGIN" class="private-inp"> %>
      <%= f.submit "Sign up", class:"private-inp" %>
      <p>
        Have Account?
        <%= link_to 'Login Here', new_user_session_path %>
      </p>
    <% end %>
  </div>
</div>

<div class="pt-5 w-50 mx-auto">
<h1 class="mt-5">Restaurants</h1>
<%= link_to 'New Restaurants', new_restaurant_path,class: "btn btn-primary btn-sm w-25 float-right" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.sort.each do |restaurant| %>
      <tr>
        <td><%= restaurant_avatar(restaurant) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td class="text-center"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td class="text-center"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>

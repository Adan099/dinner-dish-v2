<div class="container-fluid w-75 mx-auto sc mt-5 pt-5">
<h2 class="text-center mt-5">Cart</h2>
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr>
							<th style="width:50%">Product</th>
							<th style="width:10%">Price</th>
							<th style="width:8%">Quantity</th>
							<th style="width:22%" class="text-center">Subtotal</th>
							<th style="width:10%"></th>
						</tr>
					</thead>
					<tbody>
          <% if @items.each %>


            <% @items.each do |cart_item| %>
						<tr>
					<%= form_tag(controller: "carts", action: "update", remote: true) do %>

							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 hidden-xs"><img class="w-100" src=<%= url_for(cart_item.item.item_image[0]) %> alt="..." class="img-responsive"/>

                  </div>
									<div class="col-sm-10">
										<h4 class="nomargin"><%= cart_item.item.name %></h4>
										<p><%= cart_item.item.description %></p>
									</div>
								</div>
							</td>
							<td data-th="Price">Rs. <%= cart_item.item.price %></td>
							<td data-th="Quantity">
                <%= number_field_tag :quantity, cart_item.quantity, min: 1, class: 'form-control text-center' %>
                <%= hidden_field_tag :id, cart_item.id %>

							</td>
							<td data-th="Subtotal" class="text-center">Rs. <%= cart_item.quantity.to_i * cart_item.item.price.to_i %></td>
							<td class="actions" data-th="">
                <%= button_tag type: 'submit', class: "btn btn-info btn-sm" do %>
                  <i class="fa fa-refresh" aria-hidden="true"></i>
                <% end %>
                <%= link_to '', cart_item, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class:"fa fa-trash-o btn btn-danger btn-sm" %>
							</td>
              <% end %>
						</tr>
            <% @total = cart_item.quantity.to_i * cart_item.item.price.to_i %>
            <% end %>
          <% end %>
					</tbody>

					<tfoot>
						<tr class="visible-xs">
							<td class="text-center"><strong>Total <%= @total %></strong></td>
						</tr>
						<tr>
							<td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
							<td colspan="2" class="hidden-xs"></td>
							<td class="hidden-xs text-center"><strong>Total Rs.  <%= @total %></strong></td>
							<td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
						</tr>
					</tfoot>
				</table>
</div>

<div class="w-50 mx-auto mt-3">
<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :restaurant %>
    <%= form.select :restaurant_id, options_for_select(@restaurant), {}, {:class=>"selectpicker w-100", "data-live-search" => "true"} if @restaurant %>
  </div>

  <div class="form-group">
    <%= form.label :category_ids, "Select Category" %>
    <%= form.select :category_ids, options_for_select(@categories, item.categories.ids), {include_blank: false, include_hidden: false}, {:multiple => true, :class=>"selectpicker w-100", "data-live-search" => "true"} if @categories %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :item_image %>
     <%= form.file_field :item_image, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, 'Product Status'%><br />
    <%= form.radio_button :status, 'publish', :checked => true %> Show <br>
     <%= form.radio_button :status, 'unpublish' %> Hide <br>
  </div>

  <div class="actions text-center">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
</div>

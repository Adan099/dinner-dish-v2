<div class="pt-5 w-50 mx-auto ">
<h1 class="mt-5">Items</h1>
<%= link_to 'New Item', new_item_path,class: "btn btn-primary btn-sm w-25 float-right" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
      <th>Restaurant</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody class="allitems">
    <%= render 'allItem' %>
  </tbody>
</table>
<br>

</div>
<div class="pags d-flex justify-content-center">
  <%= paginate @items %>
</div>

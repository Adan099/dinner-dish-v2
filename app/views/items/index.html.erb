<div class="pt-5 w-50 mx-auto">
<h1 class="mt-5">Items</h1>
<%= link_to 'New Item', new_item_path,class: "btn btn-primary btn-sm w-25 float-right" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Restaurant</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.item_image[0].variant(resize: '80x80!').processed if item.item_image[0] %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.status %></td>
        <td><%= item.restaurant.name %></td>
        <td class="text-center"><%= link_to 'Show', item_path(item) %></td>
        <td class="text-center"><%= link_to 'Edit', edit_item_path(item) %></td>
        <td class="text-center"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
